    [Unit]
    Description=FastAPI Service
    After=network.target

    [Service]
    User=admin-ryan
    WorkingDirectory=/app/main.py
    ExecStart=/path/to/your/venv/bin/gunicorn main:app -w 4 -k uvicorn.workers.UvicornWorker --bind 127.0.0.1:8000
    Restart=on-failure

    [Install]
    WantedBy=multi-user.target
